{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      "*": [
        "shared/*",
        "browser/*",
        "mobile/*",
        "desktop/*",
        "server/*",
        "core/*"
      ]
    },
    "outDir": "build",
    "jsx": "react",
    "allowJs": true,
    "checkJs": false,
    "strict": false,
    "pretty": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2015", "es2016", "es2017", "dom"]
  },
  "include": [
    "shared",
    "browser",
    "mobile",
    "desktop",
    "server",
    "core"
  ],
  "exclude": [
    "static",
    "build",
    "node_modules"
  ]
}
